<Window x:Class="Wpf_Task_Mvvm.MenuEquipo.OpcionesEquipo.ActualizarEquipo.ActualizarEquipo_V"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Task_Mvvm.MenuEquipo.OpcionesEquipo.ActualizarEquipo"
        mc:Ignorable="d"
        Title="ACTUALIZAR EQUIPO" Height="312" Width="816" MinHeight="312" MinWidth="807" MaxHeight="312" MaxWidth="816" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">


    <Grid x:Name="grdPrincipal">

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblActualizarEquipo" Content="--- ACTUALIZAR EQUIPO ---" VerticalAlignment="Center" Height="70" FontFamily="Bahnschrift" FontSize="36" FontWeight="Bold" RenderTransformOrigin="0.508,-0.011" Background="Black" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <Separator HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Height="10" Width="772" Background="Black" Margin="0,8,0,0"/>

        <StackPanel x:Name="stkNombreEquipo" Grid.Row="2" Orientation="Horizontal" Margin="0,2,0,4">

            <Label x:Name="lblNombre" Content="NOMBRE :" Grid.Row="2" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="18" Margin="20,0,0,0" Height="30" Width="93"/>

            <TextBox x:Name="txtNombre" Text="{Binding NombreEquipo}" TextWrapping="Wrap" Height="32" FontFamily="Bahnschrift" FontSize="18" FontWeight="Bold" BorderBrush="Black" BorderThickness="2,2,2,2" MaxLength="40" Padding="5,3,0,0" Width="665" Margin="0,0,19,0" Style="{StaticResource CurvedTextBoxStyle}"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="10" Width="772" Background="Black"/>

        <StackPanel x:Name="stkLigaEquipo" Grid.Row="4" Orientation="Horizontal" Margin="0,2,0,4">

            <Label x:Name="lblLiga" Content="LIGA :" Grid.Row="4" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="18" Margin="20,0,0,0" Height="30" Width="60"/>

            <TextBox x:Name="txtLiga" Text="{Binding LigaEquipo}" TextWrapping="Wrap" Height="32" FontFamily="Bahnschrift" FontSize="18" FontWeight="Bold" BorderBrush="Black" BorderThickness="2,2,2,2" MaxLength="40" Padding="5,3,0,0" Width="699" Margin="0,0,20,0" Style="{StaticResource CurvedTextBoxStyle}"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="10" Width="772" Background="Black"/>

        <Button x:Name="btnActualizarEquipo" Command="{Binding ActualizarEquipoCommand}" Content="ACTUALIZAR EQUIPO" Margin="22,4,22,7" Grid.Row="6" Foreground="White" FontFamily="Bahnschrift" FontSize="26" FontWeight="Bold" Cursor="Hand" Style="{StaticResource CurvedButtonStyle}"/>

    </Grid>

</Window>
