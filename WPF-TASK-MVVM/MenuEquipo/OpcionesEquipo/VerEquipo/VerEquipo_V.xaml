<Window x:Class="Wpf_Task_Mvvm.MenuEquipo.OpcionesEquipo.VerEquipo.VerEquipo_V"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Task_Mvvm.MenuEquipo.OpcionesEquipo.VerEquipo"
        mc:Ignorable="d"
        Title="VER EQUIPO" Height="568" Width="989" MinHeight="568" MinWidth="989" MaxHeight="568" MaxWidth="989" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="169*"/>
            <RowDefinition Height="73*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblVerEquipo" Content="--- VER EQUIPO ---" VerticalAlignment="Center" Height="70" FontFamily="Bahnschrift" FontSize="36" FontWeight="Bold" RenderTransformOrigin="0.508,-0.011" Background="Black" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <Separator HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="10" Width="950" Background="Black"/>

        <StackPanel x:Name="stkNombreEquipo" Grid.Row="2" Orientation="Horizontal" Margin="0,2,0,4">

            <Label x:Name="lblNombre" Content="NOMBRE :" Grid.Row="2" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="20,0,0,0" Height="35" Width="111"/>

            <Label x:Name="lblNombreEquipo" Content="{Binding NombreEquipo}" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="5,0,0,0" Height="35" Width="822"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="10" Width="950" Background="Black"/>

        <StackPanel x:Name="stkLigaEquipo" Grid.Row="4" Orientation="Horizontal" Margin="0,2,0,4">

            <Label x:Name="lblLiga" Content="LIGA :" Grid.Row="4" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="20,0,0,0" Height="35" Width="73"/>

            <Label x:Name="lblLigaEquipo" Content="{Binding LigaEquipo}" Grid.Row="4" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="5,0,0,0" Height="35" Width="870"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="10" Width="950" Background="Black"/>

        <StackPanel x:Name="stkNumJugadoresEquipo" Grid.Row="6" Orientation="Horizontal" Margin="0,2,0,4">

            <Label x:Name="lblJugadores" Content="NUMERO DE JUGADORES :" Grid.Row="6" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="20,0,0,0" Height="35" Width="275"/>

            <Label x:Name="lblJugadoresEquipo" Content="{Binding TotalJugadoresPlantilla}" Grid.Row="6" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="18" Margin="5,0,0,0" Height="35" Width="669"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="7" VerticalAlignment="Center" Height="10" Width="950" Background="Black"/>

        <StackPanel x:Name="stkJugadores" Grid.Row="8" Orientation="Horizontal" Margin="0,2,0,4">

            <Label x:Name="lblJugadoresPlantilla" Grid.Row="8" Content="* Jugadores en Plantilla :" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="16" Margin="20,3,0,9" Height="30" Width="228"/>
            <Label x:Name="lblJugadoresParados" Grid.Row="8" Content="* Jugadores Parados :" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="16" Margin="290,3,0,9" Height="30" Width="167"/>
            <Label x:Name="lblNumTotalJugadoresParados" Grid.Row="8" Content="{Binding TotalJugadoresParados}" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="16" Margin="5,3,0,9" Height="30" Width="132"/>
        </StackPanel>


        <StackPanel x:Name="stkDatos" Grid.Row="9" Orientation="Horizontal" Margin="0,2,0,4">

            <DataGrid x:Name="dgwDatosPlantilla" Grid.Row="6" ItemsSource="{Binding DGWDatosPlantilla}" SelectedItem="{Binding JugadorSeleccionadoPlantilla, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="25,0,10,10" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="20" IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow" VerticalAlignment="Stretch"  HeadersVisibility="Column"  ColumnWidth="*" Cursor="Hand" Width="406" >

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="NOMBRE" Binding="{Binding Nombre}" />
                    <DataGridTextColumn Header="EDAD" Binding="{Binding Edad}" />
                </DataGrid.Columns>

            </DataGrid>

            <DataGrid x:Name="dgwDatosParados" Grid.Row="6" ItemsSource="{Binding DGWDatosParados}" SelectedItem="{Binding JugadorSeleccionadoParado, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="100,0,10,10" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="20" IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow" VerticalAlignment="Stretch"  HeadersVisibility="Column"  ColumnWidth="*" Cursor="Hand" Width="409">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="NOMBRE" Binding="{Binding Nombre}" />
                    <DataGridTextColumn Header="EDAD" Binding="{Binding Edad}" />
                </DataGrid.Columns>

            </DataGrid>

        </StackPanel>

        <StackPanel x:Name="stkBotones" Grid.Row="10" Orientation="Horizontal" Margin="0,2,0,4">

            <Button x:Name="btnDespedirJugador" Command="{Binding DespedirJugadorCommand}" Content="DESPEDIR JUGADOR" Foreground="White" FontFamily="Bahnschrift" FontSize="26" FontWeight="Bold" Cursor="Hand" Height="57" Width="411" Margin="20,0,0,3"  Style="{StaticResource CurvedButtonStyle}"/>

            <Button x:Name="btnInscribirJugador" Command="{Binding FicharJugadorCommand}" Content="INSCRIBIR JUGADOR" Foreground="White" FontFamily="Bahnschrift" FontSize="26" FontWeight="Bold" Cursor="Hand" Height="57" Width="411" Margin="108,0,0,3"  Style="{StaticResource CurvedButtonStyle}"/>

        </StackPanel>


    </Grid>
</Window>
