<Window x:Class="Wpf_Task_Mvvm.Login.Login_V"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Task_Mvvm.Login"
        mc:Ignorable="d"
        Title="LOGIN" Height="564" Width="503" MinHeight="564" MinWidth="503" MaxHeight="564" MaxWidth="503" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">

    <Grid x:Name="grdPrincipal" Background="White">

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Grid x:Name="grdLogo"  Style="{StaticResource GradientBackgroundGridStyle}">
            <Image Height="269" Margin="91,10,96,0" VerticalAlignment="Top" Source="/Resources/logo_login_app_csarp.png"/>
        </Grid>


        <Label x:Name="lblInicioSesion" Content="INICIO DE SESION" Margin="90,5,91,0" Grid.Row="1" VerticalAlignment="Top" Height="42" FontFamily="Bahnschrift" FontSize="36" FontWeight="Bold" RenderTransformOrigin="0.508,-0.011"/>

        <Separator Margin="16,52,17,0" Grid.Row="1" VerticalAlignment="Top" Height="10" Background="Black"/>

        <Label x:Name="lblCorreo" Content="CORREO :" HorizontalAlignment="Left" Margin="16,90,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32" Width="104" FontFamily="Bahnschrift" FontSize="22" FontWeight="Bold" RenderTransformOrigin="0.508,-0.011" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txtCorreo" Text="{Binding CorreoUsuario}" Margin="125,90,17,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" FontFamily="Bahnschrift" FontSize="20" FontWeight="Bold" BorderBrush="Black" BorderThickness="2,2,2,2" MaxLength="25" Padding="5,3,0,0" Style="{StaticResource CurvedTextBoxStyle}"/>

        <Label x:Name="lblContraseña" Content="CONTRASEÑA :" HorizontalAlignment="Left" Margin="16,137,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32" Width="161" FontFamily="Bahnschrift" FontSize="22" FontWeight="Bold" RenderTransformOrigin="0.508,-0.011" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txtContraseña" Text="{Binding ContraseñaUsuario}" Margin="177,137,17,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" FontFamily="Bahnschrift" FontSize="20" FontWeight="Bold" BorderBrush="Black" BorderThickness="2,2,2,2" MaxLength="25" Padding="5,3,0,0" Style="{StaticResource CurvedTextBoxStyle}"/>

        <Button x:Name="btnInicio" Command="{Binding IniciarSesionCommand}" Content="INICIAR SESION" Margin="16,192,17,10" Grid.Row="1" Foreground="White" FontFamily="Bahnschrift" FontSize="26" FontWeight="Bold" Cursor="Hand" Style="{StaticResource CurvedButtonStyle}"/>


    </Grid>

</Window>
