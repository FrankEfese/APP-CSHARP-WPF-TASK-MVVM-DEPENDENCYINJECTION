<Window x:Class="Wpf_Task_Mvvm.MenuJugador.OpcionesJugador.VerJugador.VerJugador_V"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Task_Mvvm.MenuJugador.OpcionesJugador.VerJugador"
        mc:Ignorable="d"
        Title="VER JUGADOR" Height="441" Width="816" MinHeight="441" MinWidth="807" MaxHeight="441" MaxWidth="816" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">


    <Grid x:Name="grdPrincipal">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="35*"/>

        </Grid.RowDefinitions>
        <Label x:Name="lblVerJugador" Content="--- VER JUGADOR ---" VerticalAlignment="Center" Height="70" FontFamily="Bahnschrift" FontSize="36" FontWeight="Bold" RenderTransformOrigin="0.508,-0.011" Background="Black" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <Separator HorizontalAlignment="Center" Grid.Row="1" Width="772" Background="Black" Margin="0,0,0,8" Height="1" VerticalAlignment="Bottom"/>

        <StackPanel x:Name="stkNombreJugador" Grid.Row="2" Orientation="Horizontal" Margin="0,2,0,14" Grid.RowSpan="2">

            <Label x:Name="lblNombre" Content="NOMBRE :" Grid.Row="5" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="20,0,0,0" Height="35" Width="113"/>

            <Label x:Name="lblNombreJugador" Content="{Binding NombreJugador}" Grid.Row="5" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="5,0,10,0" Height="35" Width="643" RenderTransformOrigin="-0.182,0.517"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="10" Width="772" Background="Black"/>

        <StackPanel x:Name="stkEdadJugador" Grid.Row="4" Orientation="Horizontal" Margin="0,1,0,3">

            <Label x:Name="lblEdad" Content="EDAD :" Grid.Row="4" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="20,0,0,0" Height="35" Width="75"/>

            <Label x:Name="lblEdadJugador" Content="{Binding EdadJugador}" Grid.Row="4" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="5,0,0,0" Height="35" Width="688" RenderTransformOrigin="-0.182,0.517"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="10" Width="772" Background="Black"/>

        <StackPanel x:Name="stkNacionalidadJugador" Grid.Row="6" Orientation="Horizontal" Margin="0,1,0,3">

            <Label x:Name="lblNacionalidad" Content="NACIONALIDAD :" Grid.Row="6" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="20,0,0,0" Height="35" Width="172"/>

            <Label x:Name="lblNacionalidadJugador" Content="{Binding NacionalidadJugador}" Grid.Row="6" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="5,0,0,0" Height="35" Width="582" RenderTransformOrigin="-0.182,0.517"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="7" VerticalAlignment="Center" Height="10" Width="772" Background="Black"/>

        <StackPanel x:Name="stkAlturaJugador" Grid.Row="8" Orientation="Horizontal" Margin="0,1,0,3">

            <Label x:Name="lblAltura" Content="ALTURA :" Grid.Row="8" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="20,0,0,0" Height="35" Width="100"/>

            <Label x:Name="lblAlturaJugador" Content="{Binding AlturaJugador}" Grid.Row="8" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="5,0,0,0" Height="35" Width="656" RenderTransformOrigin="-0.182,0.517"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="9" VerticalAlignment="Center" Height="10" Width="772" Background="Black"/>

        <StackPanel x:Name="stkPesoJugador" Grid.Row="10" Orientation="Horizontal" Margin="0,0,0,3">

            <Label x:Name="lblPeso" Content="PESO :" Grid.Row="10" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="20,0,0,0" Height="35" Width="75"/>

            <Label x:Name="lblPesoJugador" Content="{Binding PesoJugador}" Grid.Row="10" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="5,0,0,0" Height="35" Width="688" RenderTransformOrigin="-0.182,0.517"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="11" VerticalAlignment="Center" Height="10" Width="772" Background="Black"/>

        <StackPanel x:Name="stkEquipoJugador" Grid.Row="12" Orientation="Horizontal" Grid.RowSpan="2" Margin="0,0,0,30">

            <Label x:Name="lblEquipo" Content="EQUIPO :" Grid.Row="12" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="20,0,0,0" Height="35" Width="95"/>

            <Label x:Name="lblEquipoJugador" Content="{Binding EquipoJugador}" Grid.Row="12" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="22" Margin="5,0,0,0" Height="35" Width="671" RenderTransformOrigin="-0.182,0.517"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="13" VerticalAlignment="Top" Height="10" Width="772" Background="Black" Margin="0,0,0,2"/>

    </Grid>


</Window>
