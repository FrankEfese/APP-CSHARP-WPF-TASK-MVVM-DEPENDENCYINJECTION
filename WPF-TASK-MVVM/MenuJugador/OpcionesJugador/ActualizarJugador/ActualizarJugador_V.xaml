<Window x:Class="Wpf_Task_Mvvm.MenuJugador.OpcionesJugador.ActualizarJugador.ActualizarJugador_V"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Task_Mvvm.MenuJugador.OpcionesJugador.ActualizarJugador"
        mc:Ignorable="d"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="ACTUALIZAR JUGADOR" Height="500" Width="816" MinHeight="500" MinWidth="807" MaxHeight="500" MaxWidth="816" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">

    <Grid x:Name="grdPrincipal">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="59*"/>

        </Grid.RowDefinitions>

        <Label x:Name="lblActualizarJugador" Content="--- ACTUALIZAR JUGADOR ---" VerticalAlignment="Center" Height="70" FontFamily="Bahnschrift" FontSize="36" FontWeight="Bold" RenderTransformOrigin="0.508,-0.011" Background="Black" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <Separator HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Height="10" Width="772" Background="Black" Margin="0,19,0,0"/>

        <StackPanel x:Name="stkNombreJugador" Grid.Row="2" Orientation="Horizontal" Margin="0,2,0,4">

            <Label x:Name="lblNombre" Content="NOMBRE :" Grid.Row="2" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="18" Margin="20,0,0,0" Height="30" Width="93"/>

            <TextBox x:Name="txtNombre" Text="{Binding NombreJugador}" TextWrapping="Wrap" Height="32" FontFamily="Bahnschrift" FontSize="18" FontWeight="Bold" BorderBrush="Black" BorderThickness="2,2,2,2" MaxLength="25" Padding="5,3,0,0" Width="665" Margin="0,0,19,0"  Style="{StaticResource CurvedTextBoxStyle}"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="10" Width="772" Background="Black"/>

        <StackPanel x:Name="stkEdadJugador" Grid.Row="4" Orientation="Horizontal" Margin="0,1,0,3">

            <Label x:Name="lblEdad" Content="EDAD :" Grid.Row="4" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="18" Margin="20,0,0,0" Height="30" Width="68"/>

            <xctk:IntegerUpDown x:Name="spnEdad" Minimum="17" Maximum="44" Value="{Binding EdadJugador, Mode=TwoWay}" 
                        Width="130" VerticalAlignment="Center" BorderBrush="Black" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="18" TextAlignment="Right" Style="{StaticResource CurvedIntegerUpDownStyle}"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="10" Width="772" Background="Black"/>

        <StackPanel x:Name="stkNacionalidadJugador" Grid.Row="6" Orientation="Horizontal" Margin="0,1,0,3">

            <Label x:Name="lblNacionalidad" Content="NACIONALIDAD :" Grid.Row="6" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="18" Margin="20,0,0,0" Height="30" Width="147"/>

            <TextBox x:Name="txtNacionalidad" Text="{Binding NacionalidadJugador}" TextWrapping="Wrap" Height="32" FontFamily="Bahnschrift" FontSize="18" FontWeight="Bold" BorderBrush="Black" BorderThickness="2,2,2,2" MaxLength="25" Padding="5,3,0,0" Width="611" Margin="0,0,19,0" Style="{StaticResource CurvedTextBoxStyle}"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="7" VerticalAlignment="Center" Height="10" Width="772" Background="Black"/>

        <StackPanel x:Name="stkAlturaJugador" Grid.Row="8" Orientation="Horizontal" Margin="0,1,0,3">

            <Label x:Name="lblAltura" Content="ALTURA :" Grid.Row="8" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="18" Margin="20,0,0,0" Height="30" Width="86"/>

            <xctk:IntegerUpDown x:Name="spnAltura" Minimum="101" Maximum="249" Value="{Binding AlturaJugador, Mode=TwoWay}" 
            Width="130" VerticalAlignment="Center" BorderBrush="Black" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="18" TextAlignment="Right" Style="{StaticResource CurvedIntegerUpDownStyle}"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="9" VerticalAlignment="Center" Height="10" Width="772" Background="Black"/>

        <StackPanel x:Name="stkPesoJugador" Grid.Row="9" Orientation="Horizontal" Margin="0,10,0,3" Grid.RowSpan="2">

            <Label x:Name="lblPeso" Content="PESO :" Grid.Row="10" VerticalAlignment="Center" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="18" Margin="20,0,0,0" Height="30" Width="66"/>

            <xctk:IntegerUpDown x:Name="spnPeso" Minimum="31" Maximum="179" Value="{Binding PesoJugador, Mode=TwoWay}" 
            Width="130" VerticalAlignment="Center" BorderBrush="Black" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="18" TextAlignment="Right" Style="{StaticResource CurvedIntegerUpDownStyle}"/>

        </StackPanel>

        <Separator HorizontalAlignment="Center" Grid.Row="11" VerticalAlignment="Center" Height="10" Width="772" Background="Black"/>

        <Button x:Name="btnActualizarJugador" Command="{Binding ActualizarJugadorCommand}" Content="ACTUALIZAR JUGADOR" Margin="22,4,22,10" Grid.Row="12" Foreground="White" FontFamily="Bahnschrift" FontSize="26" FontWeight="Bold" Cursor="Hand" Style="{StaticResource CurvedButtonStyle}"/>



    </Grid>

</Window>
